{
  "name": "@solana-commerce/ui-primitives",
  "version": "0.1.0",
  "description": "Framework-agnostic UI primitives built with vanilla JS and HTML",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "type-check": "tsc --noEmit"
  },
  "files": [
    "dist",
    "src"
  ],
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "tsup": "^8.0.0"
  }
} 