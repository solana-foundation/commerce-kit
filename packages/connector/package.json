{
    "name": "@solana-commerce/connector",
    "version": "0.0.0",
    "description": "Headless wallet connector client and React provider built on Wallet Standard",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "sideEffects": false,
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "files": [
        "dist/**"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "type-check": "tsc --noEmit",
        "lint": "biome lint src/",
        "clean": "rm -rf dist",
        "test": "vitest run",
        "test:watch": "vitest"
    },
    "peerDependencies": {
        "react": "^19.1.0"
    },
    "peerDependenciesMeta": {
        "react": {
            "optional": true
        }
    },
    "dependencies": {
        "@wallet-standard/app": "^1.0.0",
        "@wallet-standard/base": "^1.0.0",
        "@wallet-standard/features": "^1.0.0"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@types/node": "^24.1.0",
        "@types/react": "^19.1.0",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "tsup": "^8.0.0",
        "typescript": "^5.3.0",
        "vitest": "^1.0.0",
        "happy-dom": "^15.10.2"
    },
    "license": "MIT"
}
