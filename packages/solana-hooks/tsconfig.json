{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "incremental": false,
        "noEmit": false,
        "jsx": "react-jsx",
        "moduleResolution": "bundler",
        "module": "ESNext",
        "target": "ES2022",
        "strict": false,
        "skipLibCheck": true,
        "noUncheckedIndexedAccess": false,
        "baseUrl": ".",
        "paths": {
            "@solana-commerce/connector-kit": ["./src/types/connector-kit-shim.d.ts"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["dist", "node_modules"]
}
