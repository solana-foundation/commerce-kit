{
  "name": "commerce-kit",
  "private": true,
  "packageManager": "pnpm@10.14.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "program",
    "program/clients/typescript"
  ],
  "scripts": {
    "build": "turbo build",
    "generate-clients": "cd program && pnpm run generate-clients",
    "build:docs": "turbo build --filter=docs",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "clean": "turbo clean"
  },
  "devDependencies": {
    "turbo": "latest",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.87.4"
  }
}